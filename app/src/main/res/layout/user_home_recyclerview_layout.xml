<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dandelion Chocolate"
            android:textColor="#000000"
            android:textSize="24sp"
            android:paddingLeft="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="16dp"
            android:maxLines="2"
            android:text="740 Valencia St, San Fracisco, CA" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/status1"
                android:layout_width="wrap_content"
                android:layout_weight="0.2"
                app:switchMinWidth="40dp"
                app:thumbTint="#fafafa"
                android:layout_gravity="center"
                app:trackTint="@color/checker_track"
                android:layout_height="wrap_content">

            </com.google.android.material.switchmaterial.SwitchMaterial>

        </LinearLayout>


        <TextView
            android:id="@+id/radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_panorama_fish_eye_black_24dp"
            android:drawablePadding="16dp"
            android:text="5 mile  radius" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#5d5d5d" />

    </LinearLayout>




    </LinearLayout>


</RelativeLayout>
