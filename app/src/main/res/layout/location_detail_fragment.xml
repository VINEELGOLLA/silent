<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/App1Theme"
    tools:context=".Location_detail">

    <!--    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000000"
            android:elevation="4dp"
            android:theme="@style/App1Theme" />-->



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textStyle="bold" />



                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:switchMinWidth="40dp"
                        app:thumbTint="#fafafa"
                        app:trackTint="@color/checker_track"
                        >

                    </com.google.android.material.switchmaterial.SwitchMaterial>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#5d5d5d" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:textColor="#000000"

            android:drawablePadding="16dp"
             />



            <TextView
                android:id="@+id/pluscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_navigation_black_24dp"
                android:drawablePadding="16dp"
                android:textColor="#0645AD"
                android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="#000000"
            android:drawablePadding="16dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Update Radius" >

        </TextView>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_gravity="center"
            app:checkedChip="@id/chip6"

            app:chipSpacingHorizontal="40dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:textColor="@color/bg_chip_state_text_color"

                app:chipStartPadding="10dp"
                android:text="5" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:textColor="@color/bg_chip_state_text_color"

                app:chipStartPadding="10dp"
                android:text="10" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:textColor="@color/bg_chip_state_text_color"

                app:chipStartPadding="10dp"

                android:text="15" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:textColor="@color/bg_chip_state_text_color"
                app:chipStartPadding="10dp"

                android:text="20" />
        </com.google.android.material.chip.ChipGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">




            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Mode" >

            </TextView>-->

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:checkedChip="@id/silent1"
                app:singleSelection="true"
                app:chipSpacingHorizontal="40dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/silent1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/bg_chip_state_text_color"

                    app:chipStartPadding="5dp"
                    android:text="silent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/vibrate1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/bg_chip_state_text_color"

                    app:chipStartPadding="5dp"
                    android:text="vibrate" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/normal1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/bg_chip_state_text_color"

                    app:chipStartPadding="5dp"
                    android:text="normal" />

            </com.google.android.material.chip.ChipGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/notify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Notify Before Turning On"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textStyle="normal" />



                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/notify1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:switchMinWidth="40dp"
                    app:thumbTint="#fafafa"
                    app:trackTint="@color/checker_track"
                    >

                </com.google.android.material.switchmaterial.SwitchMaterial>

            </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/update"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="update"
                android:clickable="true"
                android:textColor="#fff"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete"
                android:layout_marginLeft="40dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="delete"
                android:clickable="true"
                android:textColor="#fff"
                android:focusable="true" />

        </LinearLayout>





</LinearLayout>















</LinearLayout>
